<h2>Convert to TMX</h2>

<hr>

<form class="form-horizontal" method="post" action="/convert" enctype="multipart/form-data">
  <div class="form-group">
    <label for="source-file" class="col-sm-2 control-label">Source file</label>
    <div class="col-sm-10">
      <input type="file" name="source-file" style="padding-top: 8px" />
    </div>
  </div>

  <div class="form-group">
    <label for="source-locale" class="col-sm-2 control-label">Source locale</label>
    <div class="col-sm-2">
      <input type="text" class="form-control" name="source-locale" />
    </div>
  </div>

  <hr>

  <div class="form-group">
    <label for="source-file" class="col-sm-2 control-label">Target file</label>
    <div class="col-sm-10">
      <input type="file" name="target-file" style="padding-top: 8px" />
    </div>
  </div>

  <div class="form-group">
    <label for="target-locale" class="col-sm-2 control-label">Target locale</label>
    <div class="col-sm-2">
      <input type="text" class="form-control" name="target-locale" />
    </div>
  </div>

  <hr>

  <div class="form-group">
    <label for="file-type" class="col-sm-2 control-label">File type</label>
    <div class="col-sm-2">
      <select class="form-control" name="file-type">
        <option value="yaml">Rails YAML</option>
        <option value="json">JSON Key/Value</option>
        <option value="xml">Android XML</option>
      </select>
    </div>
  </div>

  <hr>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input class="btn btn-default btn-primary" type="submit" value="Convert" />
    </div>
  </div>
</form>
